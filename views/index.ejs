<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Shopping Cart</title>
  <link rel="stylesheet" href="/css/index.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.9.0/css/all.css">
</head>
<body>
  <nav class="nav-bar">
    <ul class="nav-brand">
      <li><i class="fas fa-cart-arrow-down"></i> Cart-a-list</li>
    </ul>
    <ul class="nav-items">
      <li class="nav-item"><a href="">Products</a></li>
      <li class="nav-item"><a href="">Cart</a></li>
      <li class="nav-item"><a href="">Wish List</a></li>
      <li class="nav-item"><a href="">Account</a> <i class="fas fa-user-circle"></i></li>
    </ul>
  </nav>
  <header class="header">
    <h1>Shopping Cart</h1>
    <h3>...select your items and proceed to checkout</h3>
  </header>

  <main class="wrapper">
    <section class="products-list">
    <% for(let i = 0; i < products.length; i++) { %>
      <div class="product-container">
        <div class="product-image">
          <img src="<%= products[i].img_url %>" alt="">
        </div>
        <div class="product-description">
          <p>Product Description</p>
          <p><%= products[i].title %></p>
          <p>In stock (only <%= products[i].stock %> left)</p>          
          <p><i class="far fa-heart"></i> <a href="">Save for later</a></p>
        </div>
        <div class="product-price">
          <p>Price<span>(NGN)</span></p>
          <p><%= products[i].price %></p>
        </div>
        <div class="product-qty">
          <p>Quantity</p>
          <input data-product-qty type="number" name="qty" min="0" placeholder="0" />
          <button>Add To Cart</button>
        </div>      
      </div>
    <% } %>
    </section>

    <aside class="product-cart">
      <h3>CART</h3>
      <div class="cart-empty">
        <p><i class="fas fa-cart-arrow-down fa-6x"></i></p>
        <p>Your cart is empty. Keep shopping!</p>
      </div>
      <%# <div class="cart-row">
        <div class="cart-item">
          <p>Item</p>
          <img src="/assets/images/clement-h-544786-unsplash.jpg" alt="">
        </div>
        <div class="cart-price">
          <p>Price</p>
          <p>235,000.00</p>
        </div>
        <div class="cart-qty">
          <p>Quantity</p>
          <p contenteditable='true'>1</p>
          <i class="fas fa-plus-circle"></i>
        </div>
        <button>
          <a href="#"><i class="fas fa-trash-alt"></i></a>
        </button>
      </div> %>
      <hr>
      
      <div class="product-checkout">
        <p>Total: <span><strong></strong></span></p>
        <label for="coupon" class="product-coupon-check">
            <input data-coupon-check type="checkbox" name="" id="coupon">
            Use coupon
            <input data-coupon-input type="text" name="" placeholder="enter coupon code">
          </label>
        <button>Checkout</button>
      </div>
    </aside>
  </main>

  <script src="/js/index.js"></script>
</body>
</html>